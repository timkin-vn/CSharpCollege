<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="300" Width="420" MinHeight="200" MinWidth="420" MaxHeight="350" MaxWidth="420" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Марка:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Brand}" Margin="5" Width="200" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Модель:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Model}" Margin="5" Width="200" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Год выпуска:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Year}" Margin="5" Width="200" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="VIN номер:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Vin}" Margin="5" Width="200" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Цвет:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Color}" Margin="5" Width="200" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Цена:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Price}" Margin="5" Width="200" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Поступление:" Margin="5" VerticalAlignment="Center" />
        <DatePicker Grid.Row="6" Grid.Column="1" SelectedDate="{Binding ArrivalDate}" Margin="5" />

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Дата продажи:" Margin="5" VerticalAlignment="Center" />
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal">
            <DatePicker SelectedDate="{Binding SaleDate}" IsEnabled="{Binding IsSaleDateEnabled}" Margin="5" />
            <CheckBox VerticalAlignment="Center" Margin="5"
                  IsChecked="{Binding IsAvailable}"
                  Checked="WokrsTillNow_Checked"
                  Unchecked="WorksTillNow_Unchecked">
                <TextBlock Text="В наличии" />
            </CheckBox>
        </StackPanel>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="OK" Margin="5" Padding="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Padding="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>

</Window>
