<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лягушка-попрыгушка" Height="650" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding GameStatus}" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                   HorizontalAlignment="Center" TextWrapping="Wrap"
                   TextAlignment="Center"/>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8" Columns="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding DisplayText}"
                            ToolTip="{Binding ToolTip}"
                            Command="{Binding DataContext.CellClickCommand, 
                                    RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            FontSize="20" Margin="2" 
                            Width="60" Height="60"
                            IsEnabled="{Binding IsClickable}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderBrush" Value="DarkGreen"/>
                                <Setter Property="BorderThickness" Value="1"/>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Water">
                                        <Setter Property="Background" Value="Blue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Type}" Value="LilyPad">
                                        <Setter Property="Background" Value="LightGreen"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Type}" Value="Algae">
                                        <Setter Property="Background" Value="DarkGreen"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Type}" Value="Home">
                                        <Setter Property="Background" Value="LightYellow"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Type}" Value="Frog">
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Grid.Row="2" Content="Новая игра" 
                Command="{Binding RestartCommand}"
                FontSize="14" Padding="20,5" Margin="0,10,0,0"
                HorizontalAlignment="Center"
                IsEnabled="{Binding IsGameOver}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="LightGreen"/>
                    <Style.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="Foreground" Value="DarkGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    
        <Button Grid.Row="2" Content="Сменить пользователя" 
        Command="{Binding ChangeUserCommand}"
        FontSize="12" Padding="10,3" Margin="10,10,0,0"
        HorizontalAlignment="Left"
        Background="LightBlue"/>
    </Grid>
</Window>