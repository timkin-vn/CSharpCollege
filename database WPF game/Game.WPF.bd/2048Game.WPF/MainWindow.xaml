<Window x:Class="_2048Game.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:_2048Game.WPF.ViewModels"
        mc:Ignorable="d"
        Title="Sokoban" Height="640" Width="540"
        Background="#faf8ef"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Grid Margin="20,20,28,19">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Sokoban"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#776e65"
                       DockPanel.Dock="Left" Width="112"/>

            <Button Content="Restart" HorizontalAlignment="Right" Width="100" Margin="10,0,0,0" Click="RestartButton_Click" />
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Remaining boxes: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding RemainingBoxes}" Margin="6,0,20,0" VerticalAlignment="Center"/>
            <TextBlock Text="Remaining targets: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding RemainingTargets}" Margin="6,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="7" Columns="9"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="CellBorder" CornerRadius="2" Margin="2" Background="{Binding Background}" Width="40" Height="40" BorderBrush="#a0a0a0" BorderThickness="1">
                            <TextBlock Text="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Foreground="{Binding Foreground}"/>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsRecentlyPlaced}" Value="True">
                                <Setter TargetName="CellBorder" Property="BorderBrush" Value="Gold" />
                                <Setter TargetName="CellBorder" Property="BorderThickness" Value="3" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>