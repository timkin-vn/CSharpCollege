<Window x:Class="FifteenGame.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в Лабиринт" Height="450" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">


    <Window.Resources>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Path Data="M0,0 L100,0 L100,50 L50,50 L50,100 M300,400 L200,400 L200,350" 
              Stroke="#333333" StrokeThickness="10" 
              Stretch="Fill" Margin="10" Panel.ZIndex="-1"/>

        <Border CornerRadius="10" Margin="20" Background="#252526">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="30">


                <TextBlock Text="L A B Y R I N T H" 
                           HorizontalAlignment="Center" 
                           FontSize="24" 
                           FontWeight="ExtraBold" 
                           Foreground="#00A8FF"
                           Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00A8FF" BlurRadius="10" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>


                <TextBlock Text="Логин" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtLogin" Height="35" Margin="0,0,0,15"
                         Style="{StaticResource InputStyle}"/>


                <TextBlock Text="Пароль" Foreground="#AAAAAA" Margin="0,0,0,5"/>

                <PasswordBox x:Name="PwdPassword" Height="35" Margin="0,0,0,25"
                             Foreground="White" Background="#2D2D30" BorderBrush="#3E3E42"
                             Padding="5" BorderThickness="1"/>


                <Button Content="ВОЙТИ" Height="40" Click="BtnLogin_Click" Margin="0,0,0,10"
                        Background="#007ACC" FontSize="14"/>


                <Button Content="РЕГИСТРАЦИЯ" Height="40" Click="BtnRegister_Click"
                        Background="#444444" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>