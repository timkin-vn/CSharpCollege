<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FifteenGame.Wpf"
        mc:Ignorable="d"
        Title="Лабиринт" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        ResizeMode="CanResize" MinWidth="600" MinHeight="600">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. Верхняя панель -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ЛАБИРИНТ" FontSize="24" FontWeight="Bold" 
                          Foreground="White" Margin="0,0,20,0"/>
                <TextBlock Text="{Binding MovesText}" FontSize="16" 
                          Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>


        <Border Grid.Row="1" Background="Black" Margin="20" Padding="10"
                BorderBrush="DarkBlue" BorderThickness="3">
            

            <Viewbox Stretch="Uniform">
                
                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="15" Columns="15"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="1" 
                                    Background="{Binding Background}" 
                                    Width="35" Height="35">
                                
                                <TextBlock Text="{Binding Symbol}" FontSize="20" 
                                          FontWeight="Bold" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          Foreground="{Binding Foreground}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </Viewbox>
        </Border>

        <!-- 2. Нижняя панель управления -->
        <Border Grid.Row="2" Background="LightBlue" Padding="15">
            <StackPanel>
                <TextBlock Text="{Binding StatusText}" 
                          FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                          Foreground="DarkBlue" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="↑" FontSize="20" FontWeight="Bold" 
                            Width="50" Height="50" Margin="5" Click="DirectionButton_Click"
                            Background="LightGreen" Tag="Up"/>
                    <Button Content="↓" FontSize="20" FontWeight="Bold" 
                            Width="50" Height="50" Margin="5" Click="DirectionButton_Click"
                            Background="LightGreen" Tag="Down"/>
                    <Button Content="←" FontSize="20" FontWeight="Bold" 
                            Width="50" Height="50" Margin="5" Click="DirectionButton_Click"
                            Background="LightGreen" Tag="Left"/>
                    <Button Content="→" FontSize="20" FontWeight="Bold" 
                            Width="50" Height="50" Margin="5" Click="DirectionButton_Click"
                            Background="LightGreen" Tag="Right"/>

                    <Button Content="Новая игра" 
                            Click="RestartButton_Click" Padding="15,0" Height="50"
                            FontSize="14" FontWeight="Bold" Background="Orange" 
                            Foreground="White" Margin="20,5,5,5"/>

                    <Button Content="Сохранить" 
                            Click="SaveButton_Click" Padding="15,0" Height="50"
                            FontSize="14" FontWeight="Bold" Background="CornflowerBlue" 
                            Foreground="White" Margin="5,5,0,5"/>
                </StackPanel>

                <TextBlock Text="Или используйте клавиши стрелок на клавиатуре" 
                          FontSize="12" HorizontalAlignment="Center" 
                          Foreground="DarkSlateGray" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>