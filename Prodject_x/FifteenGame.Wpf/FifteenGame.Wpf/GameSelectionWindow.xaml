<Window x:Class="FifteenGame.Wpf.GameSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FifteenGame.Wpf"
        mc:Ignorable="d"
        Title="Выбор игры" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Выберите игру:" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            
            <Button x:Name="btnFifteenGame" Content="Игра в 15" 
                    Height="40" Margin="0,0,0,10" Click="BtnFifteenGame_Click"
                    Background="LightBlue" FontSize="14"/>
            
            <Button x:Name="btnTicTacToe" Content="Крестики-нолики" 
                    Height="40" Margin="0,0,0,10" Click="BtnTicTacToe_Click"
                    Background="LightGreen" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window> 