<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views"
        xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Карточка пациента" Height="450" Width="450" MinHeight="450" MinWidth="450" MaxHeight="350" MaxWidth="420" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LastName}" Margin="5" Width="200" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" Margin="5" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FirstName}" Margin="5" Width="200" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" Margin="5" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MiddleName}" Margin="5" Width="200" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата рождения:" Margin="5" />
        <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding BirthDate}" Margin="5" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Пол:" Margin="5" />
        <ComboBox Grid.Row="4" Grid.Column="1"
          ItemsSource="{Binding GenderOptions}"
          SelectedItem="{Binding Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          Margin="5" Width="200" />
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Адрес:" Margin="5" />
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Address}" Margin="5" Width="200" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Диагноз:" Margin="5" />
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Diagnosis}" Margin="5" Width="200" />

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Последний приём:" Margin="5" />
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal">
            <DatePicker SelectedDate="{Binding LastVisitDate}" IsEnabled="{Binding IsLastVisitDateEnabled}" Margin="5" />
            <CheckBox IsChecked="{Binding VisitedRecently}" Margin="5" Checked="VisitedRecently_Checked" Unchecked="VisitedRecently_Unchecked">
                <TextBlock Text="Не посещал недавно" />
            </CheckBox>
        </StackPanel>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Телефон:" Margin="5" />
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding PhoneNumber}" Margin="5" Width="200" />

        <TextBlock Grid.Row="9" Grid.Column="0" Text="Страховой номер:" Margin="5" />
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding InsuranceNumber}" Margin="5" Width="200" />

        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="OK" Margin="5" Padding="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Padding="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>