<Window x:Class="CardFile.Wpf.View.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.View"
        xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка ноутбука" Height="450" Width="400" MinHeight="450" MinWidth="400" MaxHeight="450" MaxWidth="400">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Модель:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LaptopModel}" Margin="5"/>

        <TextBlock Text="Цена:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LaptopPrice}" Margin="5"/>

        <!-- Видеокарта: выбор типа и ввод модели -->
        <TextBlock Text="Тип видеокарты:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding VideoCardVendors}"
                  SelectedItem="{Binding SelectedVideoCardVendor}" />

        <TextBlock Text="Модель видеокарты:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding VideoCard}" Margin="5"/>

        <!-- Процессор: выбор типа и ввод модели -->
        <TextBlock Text="Тип процессора:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding ProcessorVendors}"
                  SelectedItem="{Binding SelectedProcessorVendor}" />

        <TextBlock Text="Модель процессора:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Processor}" Margin="5"/>

        <TextBlock Text="Память (накопитель):" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Storage}" Margin="5"/>

        <TextBlock Text="Оперативная память:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Ram}" Margin="5"/>

        <TextBlock Text="Гарантия:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" Margin="15,9,225,0" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Warranty}" Margin="5,5,5,160"/>

        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,103,18,28" Width="200">
            <Button Content="OK" Padding="5" Click="OkButton_Click" Width="98" Height="28"/>
            <Button Content="Отмена" Padding="5" Click="CancelButton_Click" Height="27" Width="87" BorderThickness="1,1,2,1"/>
        </StackPanel>
    </Grid>
</Window>
