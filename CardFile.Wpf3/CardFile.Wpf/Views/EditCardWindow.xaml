<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="350" Width="383" MinHeight="350" MinWidth="420" MaxHeight="350" MaxWidth="420" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название книги:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding BookName}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия автора:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AuthorLastName}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя автора:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AuthorFirstName}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Жанр:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Genre}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата публикации:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding DateOfPublishing}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Издательство:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Position}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Цена:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Price}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Кол-во страниц:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding AmountOfPages}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Дата исключения из каталога:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal">
            <DatePicker SelectedDate="{Binding DismissalDate}" IsEnabled="{Binding IsDismissalDateEnabled}" Margin="5" VerticalAlignment="Center" />
            <CheckBox VerticalAlignment="Center" Margin="5" IsChecked="{Binding InCatalogTillNow}" Checked="WokrsTillNow_Checked" Unchecked="WorksTillNow_Unchecked">
                <TextBlock Text="В каталоге" />
            </CheckBox>
        </StackPanel>

        <TextBlock Grid.Row="9" Grid.Column="0" Text="Рейтинг:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding Rating}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="OK" Margin="5" Padding="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Padding="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
