<Window x:Class="Minesweeper.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сапер" Height="512" Width="860"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="RestartButton" Content="Новую игру" 
                    FontSize="14" Padding="10,5" Click="RestartButton_Click"
                    Background="LightBlue" BorderBrush="DarkBlue" Margin="0,0,10,0"/>

            <Button x:Name="DebugButton" Content="Показать мины" 
                    FontSize="14" Padding="10,5" Click="DebugButton_Click"
                    Background="LightCoral" BorderBrush="DarkRed"/>
        </StackPanel>
        <Grid x:Name="MainGrid" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
              Margin="20">
        </Grid>
    </Grid>
</Window>