<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской бой"
        Height="800"
        Width="1350"
        WindowStartupLocation="CenterScreen"
        Background="#0A1A2F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ВЕРХНЯЯ ПАНЕЛЬ -->
        <Border Grid.Row="0" Background="#001122" CornerRadius="0,0,15,15">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding ElapsedTime}"
                           FontSize="60"
                           FontWeight="ExtraBold"
                           Foreground="#00FF41"
                           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF41" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="{Binding PlayerName}"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#00E5FF"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00E5FF" BlurRadius="15" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- ПОЛЯ -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ЛЕВОЕ ПОЛЕ -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="ВАШЕ ПОЛЕ"
                           Foreground="#00FFFF"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <Grid Width="480" Height="480" Background="#001833">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Буквы -->
                    <UniformGrid Grid.Column="1" Columns="10">
                        <TextBlock Text="A" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="B" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="C" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="D" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="E" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="F" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="G" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="H" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="I" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="J" Foreground="#00FFFF" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Цифры -->
                    <UniformGrid Grid.Row="1" Rows="10" Width="44">
                        <TextBlock Text="1"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="2"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="3"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="4"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="5"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="6"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="7"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="8"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="9"  Foreground="#00FFFF" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="10" Foreground="#00FFFF" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Клетки игрока -->
                    <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding PlayerCells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="10" Columns="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Background}" BorderBrush="#003366" BorderThickness="1.5">
                                    <TextBlock Text="{Binding Symbol}"
                                               Foreground="{Binding TextColor}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <!-- ПРАВОЕ ПОЛЕ -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="ПОЛЕ ПРОТИВНИКА"
                           Foreground="#FF4444"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <Grid Width="480" Height="480" Background="#001833">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Буквы противника -->
                    <UniformGrid Grid.Column="1" Columns="10">
                        <TextBlock Text="A" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="B" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="C" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="D" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="E" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="F" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="G" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="H" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="I" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="J" Foreground="#FF6666" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Цифры противника -->
                    <UniformGrid Grid.Row="1" Rows="10" Width="44">
                        <TextBlock Text="1"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="2"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="3"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="4"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="5"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="6"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="7"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="8"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="9"  Foreground="#FF6666" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="10" Foreground="#FF6666" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Клетки противника -->
                    <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding ComputerCells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="10" Columns="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Background}" BorderBrush="#660000" BorderThickness="1.5"
                                        Cursor="Hand" MouseLeftButtonDown="EnemyCell_Click">
                                    <TextBlock Text="{Binding Symbol}"
                                               Foreground="{Binding TextColor}"
                                               FontSize="32"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>