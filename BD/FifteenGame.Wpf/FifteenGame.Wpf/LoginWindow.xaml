<Window x:Class="FifteenGame.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской бой — Вход"
        Height="647"
        Width="440"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

	<Border Background="#001133"
            CornerRadius="25"
            BorderBrush="#00FFFF"
            BorderThickness="4">
		<Border.Effect>
			<DropShadowEffect Color="#00FFFF" BlurRadius="30" ShadowDepth="0"/>
		</Border.Effect>

		<Grid Margin="35">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- Заголовок -->
			<TextBlock Text="МОРСКОЙ БОЙ"
                       FontSize="46"
                       FontWeight="ExtraBold"
                       Foreground="#00FFFF"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,20">
				<TextBlock.Effect>
					<DropShadowEffect Color="#00FFFF" BlurRadius="25"/>
				</TextBlock.Effect>
			</TextBlock>

			<!-- Иконка корабля -->
			<TextBlock Text="Ship"
                       FontSize="110"
                       FontWeight="Bold"
                       Foreground="#0088FF"
                       HorizontalAlignment="Center"
                       Grid.Row="1"
                       Margin="0,0,0,40"/>

			<!-- Подсказка -->
			<TextBlock Text="Введи своё имя, капитан:"
                       Foreground="#00FFFF"
                       FontSize="22"
                       HorizontalAlignment="Center"
                       Grid.Row="2"
                       Margin="0,0,0,15"/>

			<!-- Поле имени -->
			<TextBox x:Name="txtUsername"
                     Grid.Row="3"
                     Width="320"
                     Height="60"
                     FontSize="24"
                     Padding="20,0"
                     Text="Player1"
                     Foreground="White"
                     Background="#002244"
                     BorderBrush="#00FFFF"
                     BorderThickness="0,0,0,4"
                     CaretBrush="#00FFFF"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Margin="0,0,0,40">
				<TextBox.Effect>
					<DropShadowEffect Color="#00FFFF" BlurRadius="15"/>
				</TextBox.Effect>
			</TextBox>

			<!-- КНОПКА ВОЙТИ — теперь точно видна и в нужном месте -->
			<Button Content="ВОЙТИ В БОЙ"
                    Grid.Row="4"
                    Width="300"
                    Height="75"
                    FontSize="32"
                    FontWeight="ExtraBold"
                    Foreground="White"
                    Background="#00AA00"
                    BorderBrush="#00FF00"
                    BorderThickness="4"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    Click="Login_Click">
				<Button.Effect>
					<DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0"/>
				</Button.Effect>
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="Button">
									<Border Background="{TemplateBinding Background}"
                                            CornerRadius="20"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#00DD00"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>
		</Grid>
	</Border>
</Window>