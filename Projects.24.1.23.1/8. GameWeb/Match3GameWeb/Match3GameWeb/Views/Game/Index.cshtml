@model Match3GameWeb.Models.GameViewModel

@{
    ViewBag.Title = "Игра 3 в ряд";
    bool isGameOver = (bool?)ViewBag.IsGameOver ?? false;
}

<main>
    <div class="container">
        @Html.ActionLink("Dropoints", "Index", "Game", new { }, new { @class = "btn btn-success" })

        @for (int row = 0; row < Model.RowCount; row++)
        {
            <div class="row">
                <div class="col-2"></div>

                @for (int column = 0; column < Model.ColumnCount; column++)
                {
                    if (Model.Cells[row, column].IsEmpty)
                    {
                        <div class="col-2"></div>
                        continue;
                    }

                    if (!Model.GameOver || Model.Cells[row, column].Direction == MoveDirection.None)
                    {
                        <div class="col-2 d-grid p-2 text-center">
                            <div class="btn btn-success fs-3">@Model.Cells[row, column].Text</div>
                        </div>

                        <div class="col-2 d-grid p-2 text-center">
                            <img src="@Url.Content($"~/Content/img/{Model.Cells[row, column].Text}.png")"
                                 style="width: 150px; height: 150px; display: block; margin: auto;" />
                        </div>
                        continue;
                    }

                    <div class="col-2 d-grid p-2 text-center">
                        @Html.ActionLink(Model.Cells[row, column].Text, "PressButton",
                            new { directionText = Model.Cells[row, column].DirectionText },
                            new { @class = "btn btn-success fs-3" })

                        <a href="@Url.Action("PressButton", "Game", new { directionText = Model.Cells[row, column].DirectionText })">
                            <img src="@Url.Content($"~/Content/img/{Model.Cells[row, column].Text}.png")"
                                 style="width: 150px; height: 150px; display: block; margin: auto;" />
                        </a>
                    </div>

                    <div class="col-2"></div>
                }
            </div>
        }
    </div>
</main>