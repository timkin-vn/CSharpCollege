<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FifteenGame.Wpf.ViewModels"
        Title="MainWindow" Height="450" Width="450">

    <Window.Resources>
        <vm:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
    </Window.Resources>

    <Grid>
        <ItemsControl ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8" Columns="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Click="Cell_Click"
                            Width="50" Height="50" Margin="2"
                            FontSize="20" FontWeight="Bold"
                            Content="{Binding Num}"
                            Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
