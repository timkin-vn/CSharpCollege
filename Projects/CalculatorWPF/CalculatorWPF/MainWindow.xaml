<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF" xmlns:viewmodels="clr-namespace:CalculatorWPF.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="654" Width="765">
    <Window.DataContext>
        <viewmodels:MainWindowsViewModel/>
    </Window.DataContext>
    <Grid Height="852" VerticalAlignment="Top" Margin="25,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="DisplayTextBox" Grid.Column="0" Grid.ColumnSpan="9" Text="{Binding DisplayValue}" Background="Black"
                   Foreground="LightSeaGreen" TextAlignment="Right" FontSize="42" VerticalAlignment="Center"
                   Padding="5" Margin="5,0,10,0"/>
        <TextBox Text ="{Binding DisplayValue}" Grid.Column="6" Grid.ColumnSpan="3" Grid.RowSpan="4" Margin="5,10,5,81" Grid.Row="1"></TextBox>
        <ListBox ItemsSource="{Binding CalculationHistory}" Grid.Column="6" Grid.RowSpan="4" Margin="4,10,4,81" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Button Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="3" Margin="5,65,10,5" Content="Очистить историю" FontSize="20" Click="CleanHistoryButton_Click"></Button>

        <Button Grid.Row="3" Grid.Column="0" Content="7" FontSize="36" Margin="5,5,6,5" Click="DigitButton_Click" />
        <Button Grid.Row="3" Grid.Column="1" Content="8" FontSize="36" Margin="4,5,5,5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="9" FontSize="36" Margin="5,5,4,5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Column="0" Content="1" FontSize="36" Margin="5,2,4,3" Click="DigitButton_Click" Grid.Row="1"/>
        <Button Grid.Column="1" Content="2" FontSize="36" Margin="4,2,3,3" Click="DigitButton_Click" Grid.Row="1"/>
        <Button Grid.Column="2" Content="3" FontSize="36" Margin="5,3,4,4" Click="DigitButton_Click" Grid.Row="1"/>
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="4" Content="C" FontSize="36" Margin="6,5,6,5" Click="CleanButton_click" Grid.ColumnSpan="2"/>
        <Button Grid.Row="2" Grid.Column="4" Content="+" FontSize="36" Margin="5,5,8,65" Click="OperationButton_Click" />
        <Button Grid.Row="2" Grid.Column="5" Content="-" FontSize="36" Margin="2,4,10,66" Click="OperationButton_Click"/>
        <Button Grid.Row="2" Grid.Column="4" Content="*" FontSize="36" Margin="5,70,8,5" Click="OperationButton_Click"/>
        <Button Grid.Row="2" Grid.Column="5" Content="/" FontSize="36" Margin="2,69,10,5" Click="OperationButton_Click"/>
        <Button Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Content="=" FontSize="36" Margin="6,65,5,5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="4" Content="log" FontSize="30" Margin="5,70,9,5" Click="LogButton_Click"/>
        <Button Grid.Row="4" Grid.Column="4" Content="sin" FontSize="30" Margin="6,5,7,76" Click="SinButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="5" Content="cos" FontSize="30" Margin="5,5,6,76" Click="CosButton_Click"></Button>
        <Button Grid.Row="3" Grid.Column="5" Content="sqrt" FontSize="30" Margin="5,70,6,5" Click="SqrtButton_Click"/>
        <Button Grid.Row="3" Grid.Column="5" Content="x^2" FontSize="30" Margin="5,5,6,70" Click="DegreeButton_Click"></Button>
        <Button Grid.Row="3" Grid.Column="4" Content="%" FontSize="30" Margin="6,5,8,70" Click="PercentButton_Click"/>

    </Grid>
</Window>
