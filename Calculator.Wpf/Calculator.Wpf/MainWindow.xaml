<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" 
        xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="800"
        Background="#FFD3D3D3">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFE0E0E0"/>

            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="Black"/>
     
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" 
                   Text="{Binding DisplayValue}" 
                   TextAlignment="Right" FontSize="42" 
                   VerticalAlignment="Center" Background="#FFF0F0F0" 
                   Padding="5" Margin="5"
                   Foreground="Black"/>

        <Button Grid.Row="1" Grid.Column="0" Content="7" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="8" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="2" Content="9" FontSize="36" Margin="5" Click="DigitButton_Click"/>

        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click"/>

        <Button Grid.Row="3" Grid.Column="0" Content="1" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="2" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="3" FontSize="36" Margin="5" Click="DigitButton_Click"/>

        <Button Grid.Row="4" Grid.Column="0" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="4" Grid.Column="5" Content="π" FontSize="36" Margin="5,71,0,5" Click="PressPi_Click" Grid.RowSpan="2"/>


        <Button Grid.Row="1" Grid.Column="5" Content="C" FontSize="36" Margin="5,5,10,2" Click="ClearButton_Click"/>
        <Button Grid.Row="2" Grid.Column="4" Content="+" FontSize="36" Margin="5" Click="OperationButton_Click" RenderTransformOrigin="0.56,0.147"/>
        <Button Grid.Row="2" Grid.Column="5" Content="-" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="4" Content="*" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="5" Content="/" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="4" Grid.Column="4" Content="," FontSize="36" Margin="5" Click="DecimalPoint_Click"/>
        <Button Grid.Row="4" Grid.Column="5" Content="=" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="5" Content="√" FontSize="36" Margin="5,5,5,5" Click="SquareRoot_Click" RenderTransformOrigin="1.585,-4.07" Grid.Column="4"/>
        <Button Grid.Row="1" Grid.Column="4" Content="%" FontSize="36" Margin="5,5,5,5" Click="OperationButton_Click" RenderTransformOrigin="-0.633,-4.111"/>

     
 
        <Button Grid.Row="5" Grid.Column="0" Content="↑" FontSize="24" Margin="5" Click="IncreaseDecimalButton_Click"/>

        <Button Grid.Row="6" Grid.Column="0" Content="↓" FontSize="24" Margin="5" Click="DecreaseDecimalButton_Click"/>
    </Grid>
</Window>