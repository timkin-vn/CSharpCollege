<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" xmlns:viewmodel="clr-namespace:Calculator.Wpf.ViewModel"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="800" MinHeight="400" MinWidth="400">
    <Window.DataContext>
        <viewmodel:CalculatorViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Background="#db8fa7" Margin="5">
            <TextBlock Text="{Binding DisplayOutput}" FontSize="36" Foreground="#3f487a" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" />
        </Border>

        <Grid Grid.Row="0" Grid.Column="6" Grid.RowSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" Background="#195fdb" Foreground="#65e639" ItemsSource="{Binding OperationLog}"  SelectedItem=""  />

            <Button Grid.Row="1" Background="#dbd6d5" Foreground="#1b942c" Content="Очистить" Margin="5" Padding="5" HorizontalAlignment="Center" Click="ClearOperationLog_Click" />
        </Grid>
        <Button Grid.Row="1" Grid.Column="0" Background="#427492" Foreground="#f86d59" Content="X^2" FontSize="36" Margin="5" Click="DegetOperationButton_click" />
        <Button Grid.Row="1" Grid.Column="1" Background="#427492" Foreground="#f86d59" Content="2√x" FontSize="36" Margin="5" Click="RowOperationButton_click" />
        <Button Grid.Row="1" Grid.Column="2" Background="#427492" Foreground="#f86d59" Content="|x|" FontSize="36" Margin="5" Click="ABSOperationButton_click" />
        <Button Grid.Row="2" Grid.Column="0" Background="#427492" Foreground="#f86d59" Content="7" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="1" Background="#427492" Foreground="#f86d59" Content="8" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="2"  Background="#427492" Foreground="#f86d59" Content="9" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="0"  Background="#427492" Foreground="#f86d59" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="1"  Background="#427492" Foreground="#f86d59" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="2" Background="#427492" Foreground="#f86d59" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="0" Background="#427492" Foreground="#f86d59" Content="1" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="1" Background="#427492" Foreground="#f86d59" Content="2" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="2"  Background="#427492" Foreground="#f86d59" Content="3" FontSize="36" Margin="5" Click="DigitButton_Click" />

        <Button Grid.Row="5" Grid.Column="0" Background="#427492" Foreground="#f86d59" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click" />
        <Button Grid.Row="5" Grid.Column="1" Background="#427492" Foreground="#f86d59" Content="+/-" FontSize="36" Margin="5" Click="Neg_Poss_OperationButton_click" />

        <Button Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"   Background="#a84f20" Foreground="#398d82" Content="C" FontSize="36" Margin="5" Click="ClearButton_Click" />

        <Button Grid.Row="3" Grid.Column="4" Background="#a84f20" Foreground="#398d82" Content="+" FontSize="36" Margin="5" Click="OperationButton_Click" />
        <Button Grid.Row="2" Grid.Column="4"  Background="#a84f20" Foreground="#398d82" Content="ln" FontSize="36" Margin="5" Click="LnOperationButton_click" />
        <Button Grid.Row="2" Grid.Column="5" Background="#a84f20" Foreground="#398d82"  Content="logXY" FontSize="36" Margin="5" Click="OperationButton_Click" />

        <Button Grid.Row="3" Grid.Column="5" Background="#a84f20" Foreground="#398d82"  Content="-" FontSize="36" Margin="5" Click="OperationButton_Click" />

        <Button Grid.Row="4" Grid.Column="4" Background="#a84f20" Foreground="#398d82"  Content="*" FontSize="36" Margin="5" Click="OperationButton_Click" />

        <Button Grid.Row="4" Grid.Column="5"  Background="#a84f20" Foreground="#398d82" Content="/" FontSize="36" Margin="5" Click="OperationButton_Click" />

        <Button Grid.Row="5" Grid.Column="4"  Background="#a84f20" Foreground="#398d82" Grid.ColumnSpan="2" Content="=" FontSize="36" Margin="5" Click="OperationButton_Click" />
    </Grid>
</Window>
