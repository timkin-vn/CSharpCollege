<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="400">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Grid Background="#80C3FF">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6"
               Text="{Binding DisplayValue}"
               Background="#000E1A"
               Foreground="#006DCC"
               TextAlignment="Right"
               FontSize="56"
               VerticalAlignment="Center"
               Padding="10"
               Margin="10"
               FontFamily="Consolas"/>

        <Button Grid.Row="1" Grid.Column="0" Content="7" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="1" Grid.Column="1" Content="8" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="1" Grid.Column="2" Content="9" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Content="C" FontSize="40" Margin="8"
            Style="{StaticResource ActionButtonStyle}" Click="ClearButton_Click" />

        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="1" Content="5" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="2" Content="6" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="2" Grid.Column="3" Content="+" FontSize="40" Margin="8"
            Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="2" Grid.Column="4" Content="-" FontSize="40" Margin="8"
            Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="3" Grid.Column="0" Content="1" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="1" Content="2" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="2" Content="3" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="3" Grid.Column="3" Content="*" FontSize="40" Margin="8"
            Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="3" Grid.Column="4" Content="/" FontSize="40" Margin="8"
            Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="4" Grid.Column="0" Content="0" FontSize="40" Margin="8"
            Style="{StaticResource NumberButtonStyle}" Click="DigitButton_Click" />

        <Button Grid.Row="4" Grid.Column="1" Content="(" FontSize="40" Margin="8"
            Style="{StaticResource BacketButtonStyle}" Click="Bracket_Open_Button_Click" />

        <Button Grid.Row="4" Grid.Column="2" Content=")" FontSize="40" Margin="8"
            Style="{StaticResource BacketButtonStyle}" Click="Bracket_Close_Button_Click" />

        <Button Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Content="=" FontSize="40" Margin="8"
            Style="{StaticResource EqualsButtonStyle}" Click="OperationButton_Click" />
    </Grid>
</Window>