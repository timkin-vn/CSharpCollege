<Window x:Class="CardFile.Wpf.Views.CardEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="350" Width="450" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата производства" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding YearOfProduction}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата поступления" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />
        <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding DeliveryDate}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" Width="200" />
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Тип товара:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Type}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Цена:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Price}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

       
        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Content="OK" Padding="5" Margin="5" Click="OkButton_Click" />
            
            <Button Content="Отмена" Padding="5" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
