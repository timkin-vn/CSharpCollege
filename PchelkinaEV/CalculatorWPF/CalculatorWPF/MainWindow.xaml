<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF" xmlns:viewmodels="clr-namespace:CalculatorWPF.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:MainWindowsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="DisplayTextBox" Grid.Column="0" Grid.ColumnSpan="6" Text="{Binding DisplayValue}" Background="Black"
                   Foreground="LightSeaGreen" TextAlignment="Right" FontSize="42" VerticalAlignment="Center"
                   Padding="5" Margin="5"/>
        <TextBox Text ="{Binding DisplayValue}" Grid.Column="6" Grid.ColumnSpan="3" Grid.RowSpan="6" Margin="5"></TextBox>
        <ListBox ItemsSource="{Binding CalculationHistory}" Grid.Column="6" Grid.ColumnSpan="3" Grid.RowSpan="6" Margin="5"></ListBox>
        <Button Grid.Row="7" Grid.Column="6" Grid.ColumnSpan="3" Margin="5" Content="Очистить историю" FontSize="20" Click="CleanHistoryButton_Click"></Button>
        
        <Button Grid.Row="1" Grid.Column="0" Content="7" FontSize="36" Margin="5" Click="DigitButton_Click" />
        <Button Grid.Row="1" Grid.Column="1" Content="8" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="2" Content="9" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="0" Content="1" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="2" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="3" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Content="C" FontSize="36" Margin="5" Click="CleanButton_click"/>
        <Button Grid.Row="2" Grid.Column="4" Content="+" FontSize="36" Margin="5" Click="OperationButton_Click" />
        <Button Grid.Row="2" Grid.Column="5" Content="-" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="4" Content="*" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="5" Content="/" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="2" Content="=" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="5" Grid.Column="0" Content="log" FontSize="30" Margin="5" Click="LogButton_Click"></Button>
        <Button Grid.Row="5" Grid.Column="1" Content="sin" FontSize="30" Margin="5" Click="SinButton_Click"></Button>
        <Button Grid.Row="5" Grid.Column="2" Content="cos" FontSize="30" Margin="5" Click="CosButton_Click"></Button>
        <Button Grid.Row="6" Grid.Column="0" Content="tg" FontSize="30" Margin="5" Click="TgButton_Click"></Button>
        <Button Grid.Row="6" Grid.Column="1" Content="sqrt" FontSize="30" Margin="5" Click="SqrtButton_Click"></Button>
        <Button Grid.Row="6" Grid.Column="2" Content="x^2" FontSize="30" Margin="5" Click="DegreeButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="4" Content="+/-" FontSize="30" Margin="5" Click="UpdateSignButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="5" Content="%" FontSize="30" Margin="5" Click="PercentButton_Click"></Button>
        
    </Grid>
</Window>
