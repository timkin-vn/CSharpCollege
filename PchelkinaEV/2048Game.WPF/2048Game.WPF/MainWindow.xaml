<Window x:Class="_2048Game.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:_2048Game.WPF.ViewModels"
        mc:Ignorable="d"
        Title="2048" Height="560" Width="520"
        Background="#faf8ef"
        KeyDown="Window_KeyDown">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Grid Margin="20,20,28,19">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="2048"
                       FontSize="48"
                       FontWeight="Bold"
                       Foreground="#776e65"
                       DockPanel.Dock="Left" Width="112"/>
        </DockPanel>
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#bbada0" CornerRadius="10" Width="450" Height="400">
                <Grid>
                    <UniformGrid Rows="4" Columns="4" Margin="0">
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                        <Border Background="#cdc1b4" CornerRadius="6" Margin="5"/>
                    </UniformGrid>
                    <ItemsControl ItemsSource="{Binding Tiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="4" Columns="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" Margin="5" Background="{Binding Background}">
                                    <TextBlock Text="{Binding Value}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{Binding Foreground}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Value}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>