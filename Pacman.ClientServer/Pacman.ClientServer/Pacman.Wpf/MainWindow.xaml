<Window x:Class="Pacman.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Игра Pacman" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Игровая область -->
        <Border Grid.Column="0" Background="Black" Margin="10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                         VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="GameCanvas" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </ScrollViewer>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Column="1" Background="#F5F5F5" Padding="10">
            <StackPanel>
                <TextBlock Text="Информация об игре" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock x:Name="ScoreText" Text="Очки: 0" FontSize="14" Margin="0,5"/>
                <TextBlock x:Name="LivesText" Text="Жизни: 3" FontSize="14" Margin="0,5"/>
                <TextBlock x:Name="StatusText" Text="Статус: Новая игра" FontSize="14" Margin="0,5,0,15"/>

                <Button x:Name="NewGameButton" 
                        Content="Новая игра" 
                        Click="NewGameButton_Click"
                        Height="35" Margin="0,5"
                        Background="#4CAF50" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>

                <Separator Margin="0,15"/>

                <TextBlock Text="Сохранённые игры" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>

                <ListBox x:Name="GamesListBox" 
                        Height="200" Margin="0,5"/>

                <Button x:Name="LoadGameButton" 
                        Content="Загрузить выбранную игру" 
                        Click="LoadGameButton_Click"
                        Height="30" Margin="0,5"
                        Background="#2196F3" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>

                <Button x:Name="DeleteGameButton" 
                        Content="Удалить выбранную игру" 
                        Click="DeleteGameButton_Click"
                        Height="30" Margin="0,5"
                        Background="#F44336" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>

                <Separator Margin="0,15"/>

                <Button x:Name="LeaderboardButton" 
                        Content="Таблица лидеров" 
                        Click="LeaderboardButton_Click"
                        Height="35" Margin="0,5"
                        Background="#FF9800" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>

                <Separator Margin="0,15"/>
                <TextBlock Text="Управление - Стрелки или WASD" FontSize="14" FontWeight="Bold"/>

                <Separator Margin="0,15"/>

                <TextBlock Text="Обозначения" FontSize="14" FontWeight="Bold" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Ellipse Width="15" Height="15" Fill="Yellow" Margin="0,0,5,0"/>
                    <TextBlock Text="Pacman" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Rectangle Width="15" Height="15" Fill="Blue" Margin="0,0,5,0"/>
                    <TextBlock Text="Стена" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Rectangle Width="15" Height="15" Fill="Yellow" Margin="0,0,5,0"/>
                    <TextBlock Text="Точка (+10)" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Rectangle Width="15" Height="15" Fill="Orange" Margin="0,0,5,0"/>
                    <TextBlock Text="Энергетическая точка (+50)" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Ellipse Width="15" Height="15" Fill="Red" Margin="0,0,5,0"/>
                    <TextBlock Text="Призрак" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
