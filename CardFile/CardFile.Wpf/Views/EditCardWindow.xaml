<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="350" Width="420" MinHeight="350" MinWidth="420" MaxHeight="350" MaxWidth="420" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Наименование:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DishName}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Категория:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Category}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Text="Описание:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="40" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Размер порции (г)" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding PortionSize}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Цена:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Price}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Можно приготовить: " Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <CheckBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Margin="5" IsChecked="{Binding IsAvaliableNow}" Checked="AvaliableChecked" Unchecked="AvaliableUnchecked"></CheckBox>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Сезонное блюдо: " Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <CheckBox Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Margin="5" IsChecked="{Binding SeasonDish}" Checked="SeasonChecked" Unchecked="SeasonUnchecked"></CheckBox>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Веганское: " Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <CheckBox Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" Margin="5" IsChecked="{Binding IsVegan}" Checked="VeganChecked" Unchecked="VeganUnchecked"></CheckBox>

        <TextBlock Grid.Row="9" Grid.Column="0" Text="Острое: " Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <CheckBox Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Margin="5" IsChecked="{Binding IsSpicy}" Checked="SpicyChecked" Unchecked="SpicyUnchecked"></CheckBox>

        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="OK" Margin="5" Padding="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Padding="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
