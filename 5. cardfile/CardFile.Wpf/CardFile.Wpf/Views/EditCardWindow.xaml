<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views"
        xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Редактирование продукта" 
        Height="400" Width="400"
        MinHeight="400" MinWidth="400"
        ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Название продукта:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding ProductName}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Категория:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding Category}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Производитель:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" Text="{Binding Manufacturer}" Margin="0,0,0,10"/>

        <Grid Grid.Row="6" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Цена:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Grid.Column="1" Text="{Binding Price}" Margin="0,0,10,0"/>

            <TextBlock Grid.Column="2" Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Grid.Column="3" Text="{Binding QuantityInStock}"/>
        </Grid>

        <Grid Grid.Row="7" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Дата производства:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Grid.Column="1" SelectedDate="{Binding ProductionDate}"/>
        </Grid>

        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Срок годности:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding ExpirationDate}" 
                          IsEnabled="{Binding IsExpirationDateEnabled}"
                          Width="120" Margin="0,0,10,0"/>
                <CheckBox Content="Без срока" 
                         VerticalAlignment="Center"
                         IsChecked="{Binding HasNoExpiration}"
                         Checked="ExpirationCheckBox_Checked"
                         Unchecked="ExpirationCheckBox_Unchecked"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Padding="10,5" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Padding="10,5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>