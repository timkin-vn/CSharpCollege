<Window x:Class="CardFile.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf" 
        xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="650" Width="900" MinHeight="400" MinWidth="600"
        Loaded="Window_Loaded" Initialized="Window_Initialized"
        Background="#FFE0E0E0">
    <!-- фон для окна -->

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- центрирование по вертикали -->
        </Style>


        <!-- Общий стиль для всех кнопок -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <!-- Отступы вокруг кнопок -->
            <Setter Property="Padding" Value="15,8"/>
            <!-- отступы текста кнопок -->
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <!-- Белый текст кнопок -->
            <Setter Property="BorderThickness" Value="0"/>
            <!-- Убираем границу по умолчанию -->
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Курсор-рука при наведении -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--  эффекты при наведении/нажатии и отключении -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
             
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                            <!-- Уменьшение при нажатии -->
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                    <!-- отключенных кнопок -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CreateButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <!-- Насыщенный зеленый -->
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FF2196F3"/>
            <!-- Насыщенный синий -->
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FFF44336"/>
            <!-- Насыщенный красный -->
        </Style>

        <!-- Стиль для DataGrid (общей таблицы) -->
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#FFFAFAFA"/>
            <!-- белый фон для четных строк -->
            <Setter Property="AlternatingRowBackground" Value="#FFE0E0E0"/>
            <!-- Светло-серый фон для нечетных строк -->
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <!-- Показывать все линии сетки -->
            <Setter Property="HorizontalGridLinesBrush" Value="#FFD0D0D0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#FFD0D0D0"/>
            <Setter Property="Background" Value="White"/>
            <!-- Общий фон таблицы -->
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <!-- Выделение всей строки -->
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>

        <!-- Стиль для заголовков столбцов DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF424242"/>
            <!-- Темно-серый фон заголовков -->
            <Setter Property="Foreground" Value="White"/>
            <!-- Белый текст заголовков -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <!-- Выравнивание текста по центру -->
            <Setter Property="Padding" Value="8,5"/>
            <!-- Отступы внутри заголовков -->
        </Style>

        <!-- Стиль для TextBox поиска -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FFBBBBBB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <!--<Setter Property="CornerRadius" Value="3"/> -->
            <!-- Слегка скругляем углы -->
        </Style>

    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть..." Click="FileOpen_Click"/>
                <MenuItem Header="_Сохранить" Click="FileSave_Click"/>
                <MenuItem Header="Сохранить _как..." Click="FileSaveAs_Click"/>
                <Separator/>
                <MenuItem Header="В_ыход" Click="FileExit_Click"/>
            </MenuItem>
            <MenuItem Header="_Фильтры">
                <MenuItem Header="Все" Command="{Binding ResetFilterCommand}"/>
                <MenuItem Header="Танки" Command="{Binding FilterCommand}" CommandParameter="Танк"/>
                <MenuItem Header="Самолёты" Command="{Binding FilterCommand}" CommandParameter="Самолёт"/>
                <MenuItem Header="Корабли" Command="{Binding FilterCommand}" CommandParameter="Корабль"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Для панели поиска -->
                <RowDefinition/>
                <!-- Для основной таблицы (DataGrid) -->
                <RowDefinition Height="Auto"/>
                <!-- Для панели кнопок -->
            </Grid.RowDefinitions>

            <!-- Панель поиска -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                <TextBox Width="200" Margin="0,0,5,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Поиск" Command="{Binding SearchCommand}" Padding="10,5" Margin="0" Style="{StaticResource EditButtonStyle}"/>
                <!--  синий стиль  кнопке поиска -->
            </StackPanel>

            <!-- Основная таблица -->
            <DataGrid Grid.Row="1" Margin="10" 
                     ItemsSource="{Binding Cards}" 
                     SelectedItem="{Binding SelectedCard}" 
                     AutoGenerateColumns="False"
                     IsReadOnly="True" 
                     CanUserAddRows="False" 
                     SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="100"/>
                    <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="120"/>
                    <DataGridTextColumn Header="Конструктор" Binding="{Binding Designer}" Width="150"/>
                    <DataGridTextColumn Header="Год выпуска" Binding="{Binding ProductionYear}" Width="80"/>
                    <DataGridTextColumn Header="Скорость (км/ч)" Binding="{Binding MaxSpeed}" Width="90"/>
                    <DataGridTextColumn Header="Орудие" Binding="{Binding Gun}" Width="120"/>
                    <DataGridTextColumn Header="Вес (т)" Binding="{Binding Weight}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Панель кнопок -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                <Button Content="Создать" Click="CreateButton_Click" Style="{StaticResource CreateButtonStyle}"/>
                <Button Content="Изменить" IsEnabled="{Binding IsEditEnabled}" Click="EditButton_Click" Style="{StaticResource EditButtonStyle}"/>
                <Button Content="Удалить" IsEnabled="{Binding IsDeleteEnabled}" Click="DeleteButton_Click" Style="{StaticResource DeleteButtonStyle}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>