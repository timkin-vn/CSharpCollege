<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" 
        xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Редактирование техники" Height="450" Width="400" MinHeight="450" MinWidth="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Название техники -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="5" VerticalAlignment="Center"/>

        <!-- Производитель -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Производитель:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Manufacturer}" Margin="5" VerticalAlignment="Center"/>

        <!-- Конструктор -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Конструктор:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Designer}" Margin="5" VerticalAlignment="Center"/>

        <!-- Год выпуска -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Год выпуска:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ProductionYear}" Margin="5" VerticalAlignment="Center">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding IncreaseYearCommand}"/>
                <KeyBinding Key="Up" Command="{Binding IncreaseYearCommand}"/>
                <KeyBinding Key="Down" Command="{Binding DecreaseYearCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <!-- Тип техники -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Тип:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" 
                 ItemsSource="{Binding Source={StaticResource TechTypes}}"
                 SelectedItem="{Binding Type}" 
                 Margin="5" VerticalAlignment="Center"/>

        <!-- Максимальная скорость -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Скорость (км/ч):" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MaxSpeed}" Margin="5" VerticalAlignment="Center"/>

        <!-- Орудие -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Орудие:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Gun}" Margin="5" VerticalAlignment="Center"/>

        <!-- Вес -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Вес (т):" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Weight}" Margin="5" VerticalAlignment="Center"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                   Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="OK" Width="80" Margin="5" Padding="5" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Отмена" Width="80" Margin="5" Padding="5" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>