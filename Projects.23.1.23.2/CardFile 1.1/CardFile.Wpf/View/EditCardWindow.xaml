<Window x:Class="CardFile.Wpf.View.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.View" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="400" Width="500" MinHeight="400" MinWidth="500" MaxHeight="400" MaxWidth="500">
    <Window.DataContext>
        <viewmodels:CardViewProductsModel />
    </Window.DataContext>
    <Window.Resources>

        <Style TargetType="Button">
            <Setter Property="Background" Value="PeachPuff"/>
            <Setter Property="Foreground" Value="OliveDrab"/>


            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF070201"/>
                    <Setter Property="Foreground" Value="MistyRose"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="Black"/>


            <Setter Property="Margin" Value="5"/>

        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="LightBlue"/>



            <Setter Property="Margin" Value="50"/>

        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Foreground" Value="Navy"/>


            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>

        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Место хранения:" Margin="5" />

        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Storage_Location}" Margin="5" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Полная цена продуктов:" Margin="5" />

        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Prise}" Margin="5" />
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Срок-годности:" Margin="5" />

        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Date_Shelf_Life}" Margin="5" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NameProducts}" Margin="5" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Вид продукта:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TypeProducts}" Margin="5" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Полка:" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding ShirtProducts}" Margin="5" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Секция :" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Text="{Binding SectionProducts}" />

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Дата произвоства :" Margin="5" VerticalAlignment="Center" />
        <DatePicker Grid.Row="7" Grid.Column="1" SelectedDate="{Binding DateManufacture}" Margin="5" />

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Дата  окочание срока :" Margin="5" VerticalAlignment="Center" />
        <DatePicker Grid.Row="8" Grid.Column="1" SelectedDate="{Binding DateExpiration}" Margin="5" />
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Количества продукта  :" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding CountProducts}" Margin="5" />
        <TextBlock Grid.Row="10" Grid.Column="0" Text="Цена  продукта  :" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding PriceOneProducts}" Margin="5" />

        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Margin="5" Padding="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Padding="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
