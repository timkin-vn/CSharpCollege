<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        Title="Калькулятор" Height="550" Width="350">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="36" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="#E0E0E0" />
            
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0" />
                </Trigger>
            </Style.Triggers>
        </Style>

       
        <Style x:Key="OperationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF9F0A" />
            
            <Setter Property="Foreground" Value="White" />
        </Style>

        
        <Style x:Key="BackspaceButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0" />
            
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        
        <TextBlock Grid.Row="0" Text="{Binding DisplayValue}" 
                   FontSize="48" TextAlignment="Right"
                   Padding="10" Background="Black" Foreground="LightSeaGreen"
                   VerticalAlignment="Center" Margin="0,0,0,20"/>

        
        <Button Grid.Row="1" Grid.Column="0" Content="7" Click="DigitButton_Click" />
        <Button Grid.Row="1" Grid.Column="1" Content="8" Click="DigitButton_Click" />
        <Button Grid.Row="1" Grid.Column="2" Content="9" Click="DigitButton_Click" />
        <Button Grid.Row="1" Grid.Column="3" Content="^" Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="2" Grid.Column="0" Content="4" Click="DigitButton_Click" />
        <Button Grid.Row="2" Grid.Column="1" Content="5" Click="DigitButton_Click" />
        <Button Grid.Row="2" Grid.Column="2" Content="6" Click="DigitButton_Click" />
        <Button Grid.Row="2" Grid.Column="3" Content="×" Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="3" Grid.Column="0" Content="1" Click="DigitButton_Click" />
        <Button Grid.Row="3" Grid.Column="1" Content="2" Click="DigitButton_Click" />
        <Button Grid.Row="3" Grid.Column="2" Content="3" Click="DigitButton_Click" />
        <Button Grid.Row="3" Grid.Column="3" Content="-" Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />

        <Button Grid.Row="4" Grid.Column="0" Content="0" Click="DigitButton_Click" />
        <Button Grid.Row="4" Grid.Column="1" Content="," Click="DigitButton_Click" />
        <Button Grid.Row="4" Grid.Column="2" Content="⌫" Style="{StaticResource BackspaceButtonStyle}" Click="BackspaceButton_Click" />
        <Button Grid.Row="4" Grid.Column="3" Content="=" Style="{StaticResource OperationButtonStyle}" Click="EqualButton_Click" />

        
        <Button Grid.Row="0" Grid.Column="3" Content="C" Click="ClearButton_Click" />
        <Button Grid.Row="0" Grid.Column="2" Content="%" Click="Procent_Click" />
        <Button Grid.Row="0" Grid.Column="1" Content="÷" Style="{StaticResource OperationButtonStyle}" Click="OperationButton_Click" />
    </Grid>
</Window>