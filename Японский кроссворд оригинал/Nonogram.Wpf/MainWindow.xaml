<Window x:Class="Nonogram.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Японский кроссворд" Height="1814" Width="2046">

    <Window.Resources>
        <!-- Константы для размеров -->
        <sys:Double x:Key="CellSize">30</sys:Double>
        <sys:Double x:Key="RowClueWidth">60</sys:Double>
        <sys:Double x:Key="ColumnClueHeight">60</sys:Double>

        <!-- Кисти для подсказок -->
        <SolidColorBrush x:Key="DefaultClueBackground" Color="LightGray" />
        <SolidColorBrush x:Key="CompletedClueBackground" Color="LightBlue" />

        <Style x:Key="ClueTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>

        <!-- Стиль для клетки -->
        <Style x:Key="CellBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="Width" Value="{StaticResource CellSize}" />
            <Setter Property="Height" Value="{StaticResource CellSize}" />
            <Setter Property="Margin" Value="0" />
            <Style.Triggers>
                <!-- Закрашенные клетки -->
                <DataTrigger Binding="{Binding State}" Value="1">
                    <Setter Property="Background" Value="Black" />
                </DataTrigger>
                <!-- Завершенные строки/столбцы -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding State}" Value="1" />
                        <Condition Binding="{Binding IsCompleted}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="Blue" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для крестика (ошибки) -->
        <Style x:Key="CrossPathStyle" TargetType="Path">
            <Setter Property="Data" Value="M 2,2 L 28,28 M 28,2 L 2,28" />
            <Setter Property="Stroke" Value="Red" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Visibility" Value="Collapsed" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding State}" Value="-1">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для синей обводки -->
        <Style x:Key="CompletedBorderStyle" TargetType="Rectangle">
            <Setter Property="Stroke" Value="Blue" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для вертикальных подсказок столбцов (с изменением цвета) -->
        <Style x:Key="ColumnClueBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Background" Value="{StaticResource DefaultClueBackground}" />
            <Setter Property="Width" Value="{StaticResource CellSize}" />
            <Setter Property="Height" Value="{StaticResource ColumnClueHeight}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Background" Value="{StaticResource CompletedClueBackground}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для горизонтальных подсказок строк (с изменением цвета) -->
        <Style x:Key="RowClueBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Background" Value="{StaticResource DefaultClueBackground}" />
            <Setter Property="Width" Value="{StaticResource RowClueWidth}" />
            <Setter Property="Height" Value="{StaticResource CellSize}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Background" Value="{StaticResource CompletedClueBackground}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для пустого угла (тоже может менять цвет при завершении всей игры) -->
        <Style x:Key="EmptyCornerStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Background" Value="{StaticResource DefaultClueBackground}" />
            <Setter Property="Width" Value="{StaticResource RowClueWidth}" />
            <Setter Property="Height" Value="{StaticResource ColumnClueHeight}" />
        </Style>
    </Window.Resources>

    <Grid Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Счетчик ошибок -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" Margin="0,0,0,20"
                    HorizontalAlignment="Center">
            <TextBlock Text="Ошибки: " FontSize="16" FontWeight="Bold" />
            <TextBlock Text="{Binding MistakesCount}" FontSize="16" 
                       Foreground="Red" FontWeight="Bold" />
            <TextBlock Text=" из 5" FontSize="16" FontWeight="Bold" Margin="5,0,0,0" />
        </StackPanel>

        <!-- Пустой левый верхний угол -->
        <Border Grid.Row="1" Grid.Column="0"
                Style="{StaticResource EmptyCornerStyle}" />

        <!-- ВЕРТИКАЛЬНЫЕ подсказки для столбцов -->
        <ItemsControl Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding ColumnClues}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" Columns="15" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource ColumnClueBorderStyle}">
                        <TextBlock Text="{Binding VerticalClueText}" 
                                   Style="{StaticResource ClueTextStyle}" 
                                   TextWrapping="Wrap" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Подсказки для строк (горизонтальные) -->
        <ItemsControl Grid.Row="2" Grid.Column="0"
                      ItemsSource="{Binding RowClues}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="15" Columns="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource RowClueBorderStyle}">
                        <TextBlock Text="{Binding ClueText}" 
                                   Style="{StaticResource ClueTextStyle}" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Игровая сетка 15x15 -->
        <ItemsControl Grid.Row="2" Grid.Column="1"
                      ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="15" Columns="15" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CellBorderStyle}">
                        <Grid MouseDown="Cell_MouseDown" 
                              Tag="{Binding}"
                              Background="Transparent"
                              Cursor="Hand">
                            <Path Style="{StaticResource CrossPathStyle}" />
                            <Rectangle Style="{StaticResource CompletedBorderStyle}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="Новая игра" Padding="20,10" Margin="5" 
                    Click="NewGame_Click" />
            <Button Content="Сбросить" Padding="20,10" Margin="5" 
                    Click="Reset_Click" />
        </StackPanel>
    </Grid>
</Window>