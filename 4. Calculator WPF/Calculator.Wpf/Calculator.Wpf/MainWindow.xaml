<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="700" Width="450"
        Background="#202020">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3b3b3b"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="35"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="TextBlock" x:Key="DisplayText">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#1d1d1d"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ExpressionText">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Цифры-->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Text="{Binding DisplayValue}" Style="{StaticResource DisplayText}" />
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Text="{Binding Expression}" Style="{StaticResource ExpressionText}" />


        <Button Grid.Row="6" Grid.Column="1" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click" 
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="5" Grid.Column="0" Content="1" FontSize="36" Margin="5" Click="DigitButton_Click" 
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="5" Grid.Column="1" Content="2" FontSize="36" Margin="5" Click="DigitButton_Click"
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="5" Grid.Column="2" Content="3" FontSize="36" Margin="5" Click="DigitButton_Click"
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="4" Grid.Column="0" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click"
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="4" Grid.Column="1" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click" 
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="4" Grid.Column="2" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click"
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="3" Grid.Column="0" Content="7" FontSize="36" Margin="5" Click="DigitButton_Click" 
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="3" Grid.Column="1" Content="8" FontSize="36" Margin="5" Click="DigitButton_Click" 
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <Button Grid.Row="3" Grid.Column="2" Content="9" FontSize="36" Margin="5" Click="DigitButton_Click" 
                Background="#3b3b3b" Foreground="White" BorderBrush="#3b3b3b"/>

        <!--Знаки вычеслений-->

        <Button Grid.Row="5" Grid.Column="3" Content="+" FontSize="36" Margin="5" Click="OperationButton_Click" 
                Background="#ffb8bf" Foreground="White" BorderBrush="#5a5a5a"/>

        <Button Grid.Row="4" Grid.Column="3" Content="-" FontSize="36" Margin="5" Click="OperationButton_Click"
                Background="#ffb8bf" Foreground="White" BorderBrush="#5a5a5a"/>

        <Button Grid.Row="3" Grid.Column="3" Content="*" FontSize="36" Margin="5" Click="OperationButton_Click"
                Background="#ffb8bf" Foreground="White" BorderBrush="#5a5a5a"/>

        <Button Grid.Row="6" Content="/" FontSize="36" Margin="5,5,6,5" Click="OperationButton_Click"
                Background="#4A4A4A" Foreground="White" BorderBrush="#5a5a5a"/>

        <Button Grid.Row="2" Grid.Column="1" Content="√" FontSize="36" Margin="5,5,5,5" Click="SquareRootButton_Click"
                Background="#ffb8bf" Foreground="White" BorderBrush="#5a5a5a" RenderTransformOrigin="-1.727,0.428"/>

        <!--Знаки взаимодействий (не знаю, как назвать правильно) -->

        <Button Grid.Row="2" Grid.Column="2" Content="C" FontSize="36" Margin="5,5,0,4" Click="ClearButton_Click"
                Background="#ffb8bf" Foreground="White" BorderBrush="#5a5a5a" RenderTransformOrigin="0.5,1.784"/>

        <Button Grid.Row="6" Grid.Column="4" Content="=" FontSize="36" Margin="5" Click="OperationButton_Click"
                Background="#ffb8bf" Foreground="White" BorderBrush="#3797db"/>

        <Button Grid.Row="2" Grid.Column="3" Content="←" FontSize="36" Margin="6,5,0,5" Click="BackspaceButton_Click"
                Background="#ffb8bf" Foreground="White" BorderBrush="#5a5a5a"/>

        <Button Grid.Column="0" Content="+/-" FontSize="36" Margin="4,5,6,5" Click="ToggleSignButton_Click" 
                Background="#ffb8bf" Foreground="White" BorderBrush="#3b3b3b" Grid.Row="2"/>

        <Button Grid.Row="6" Grid.Column="2" Content="." FontSize="36" Margin="5" Click="DecimalPointButton_Click" 
                Background="#4A4A4A" Foreground="White" BorderBrush="#3b3b3b"/>

    </Grid>
</Window>
