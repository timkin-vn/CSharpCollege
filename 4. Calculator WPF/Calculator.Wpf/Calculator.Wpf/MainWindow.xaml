<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Calculator.Wpf.ViewModels"
        Title="Калькулятор" Height="450" Width="400">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <!-- Остальная разметка: без изменений -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{Binding DisplayValue}" 
               FontSize="32" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
               Background="Darkblue" Foreground="Lightblue" Padding="10" />

        <UniformGrid Grid.Row="1" Rows="5" Columns="4" Margin="0,10,0,0">
            <!-- 1-я строка -->
            <Button Content="7" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="8" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="9" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="C" Click="ClearButton_Click" FontSize="24"/>

            <!-- 2-я строка -->
            <Button Content="4" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="5" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="6" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="+" Click="OperationButton_Click" FontSize="24"/>

            <!-- 3-я строка -->
            <Button Content="1" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="2" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="3" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="-" Click="OperationButton_Click" FontSize="24"/>

            <!-- 4-я строка -->
            <Button Content="0" Click="DigitButton_Click" FontSize="24"/>
            <Button Content="," Click="Button_Click" FontSize="24"/>
            <Button Content="%" Click="Procent_Click" FontSize="24"/>
            <Button Content="*" Click="OperationButton_Click" FontSize="24"/>

            <!-- 5-я строка -->
            <Button Content="←" Click="Backspace_Click" FontSize="24"/>
            <Button Content="√" Click="Sqrt_Click" FontSize="24"/>
            <Button Content="=" Click="Equal_Click" FontSize="24"/>
            <Button Content="/" Click="OperationButton_Click" FontSize="24"/>
        </UniformGrid>
    </Grid>
</Window>
