<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" 
        xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="600" Width="460"
        Background="#202020">

    <Window.Resources>
        <!-- Цвета -->
        <SolidColorBrush x:Key="DarkGray" Color="#1C1C1C" />
        <SolidColorBrush x:Key="LightGray" Color="#A5A5A5" />
        <SolidColorBrush x:Key="Orange" Color="#FF9500" />
        <SolidColorBrush x:Key="EqualBlue" Color="#3797db" />

        <!-- Стиль кнопок -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="40"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter 
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                             />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Экран -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" 
                   Text="{Binding DisplayValue}" 
                   Background="#000000" Foreground="White"
                   TextAlignment="Right" FontSize="60" FontWeight="Bold"
                   VerticalAlignment="Center" Padding="10" Margin="5" />

        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="6"
                   Text="{Binding Expression}" FontSize="24"
                   Foreground="Gray" TextAlignment="Right"
                   Margin="5" />

        <!-- Цифры -->
        <Button Grid.Row="5" Grid.Column="1" Content="0" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="4" Grid.Column="0" Content="1" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="4" Grid.Column="1" Content="2" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="4" Grid.Column="2" Content="3" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="3" Grid.Column="0" Content="4" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="3" Grid.Column="1" Content="5" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="3" Grid.Column="2" Content="6" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="2" Grid.Column="0" Content="7" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="2" Grid.Column="1" Content="8" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="2" Grid.Column="2" Content="9" Click="DigitButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>
        <Button Grid.Row="5" Grid.Column="0" Content="." Click="DecimalPointButton_Click"
                Background="{StaticResource DarkGray}" Foreground="White"/>

        <!-- Операции -->
        <Button Grid.Row="4" Grid.Column="3" Content="+" Click="OperationButton_Click"
                Background="{StaticResource Orange}" Foreground="White"/>
        <Button Grid.Row="3" Grid.Column="3" Content="-" Click="OperationButton_Click"
                Background="{StaticResource Orange}" Foreground="White"/>
        <Button Grid.Row="2" Grid.Column="3" Content="*" Click="OperationButton_Click"
                Background="{StaticResource Orange}" Foreground="White"/>
        <Button Grid.Row="5" Grid.Column="3" Content="/" Click="OperationButton_Click"
                Background="{StaticResource Orange}" Foreground="White"/>
        

        <!-- Вспомогательные -->
        <Button Grid.Row="1" Grid.Column="2" Content="C" Click="ClearButton_Click"
                Background="{StaticResource LightGray}" Foreground="Black"/>
        <Button Grid.Row="1" Grid.Column="3" Content="←" Click="BackspaceButton_Click"
                Background="{StaticResource LightGray}" Foreground="Black"/>
        <Button Grid.Row="1" Grid.Column="1" Content="x²" Click="SquareButton_Click"
                Background="{StaticResource LightGray}" Foreground="Black"/>


        <!-- Равно -->
        <Button Grid.Row="5" Grid.Column="2" Content="=" Click="OperationButton_Click"
                Background="{StaticResource Orange}" Foreground="White"/>

    </Grid>
</Window>
