<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FifteenGame.Wpf" 
        xmlns:viewmodels="clr-namespace:FifteenGame.Wpf.ViewModels"
        xmlns:converters="clr-namespace:FifteenGame.Wpf.Converters"
        mc:Ignorable="d"
        Title="2048 Game" Height="600" Width="500" KeyDown="MainWindow_KeyDown">
    
    <Window.Resources>
        <converters:BoolToGameOverTextConverter x:Key="BoolToGameOverText"/>
        <converters:BoolToWinTextConverter x:Key="BoolToWinText"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Заголовок и информация -->
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="2048" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#776E65"/>
            <TextBlock Text="{Binding UserName}" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
        </StackPanel>

        <!-- Счет и статус -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10">
            <Border Background="#BBADA0" CornerRadius="5" Padding="10,5" Margin="5">
                <StackPanel>
                    <TextBlock Text="СЧЕТ" FontSize="12" Foreground="#EEE4DA" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Score}" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Button Content="Новая игра" Click="NewGame_Click" Margin="10,0" Padding="10,5" Background="#8F7A66" Foreground="White" BorderBrush="#8F7A66"/>
        </StackPanel>

        <!-- Игровое поле -->
        <Border Grid.Row="2" Grid.Column="1" Background="#BBADA0" CornerRadius="6" Padding="5">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="70" />
                                <RowDefinition Height="70" />
                                <RowDefinition Height="70" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="3" CornerRadius="3" Background="{Binding BackgroundColor}">
                            <TextBlock Text="{Binding DisplayValue}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{Binding TextColor}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Grid.Row" Value="{Binding Row}" />
                        <Setter Property="Grid.Column" Value="{Binding Column}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Border>

        <!-- Статус игры -->
        <StackPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="{Binding IsGameOver, Converter={StaticResource BoolToGameOverText}}" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#776E65"/>
            <TextBlock Text="{Binding HasWon, Converter={StaticResource BoolToWinText}}" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#F59563"/>
        </StackPanel>
    </Grid>
</Window>
