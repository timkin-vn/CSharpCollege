<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Game 2048</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #faf8ef;
            font-family: Arial, sans-serif;
        }
        .game-container {
            max-width: 500px;
            margin: 0 auto;
            text-align: center;
        }
        .game-header {
            margin-bottom: 20px;
        }
        .score-container {
            display: inline-block;
            background: #bbada0;
            padding: 10px 20px;
            border-radius: 3px;
            color: white;
            font-weight: bold;
            margin: 0 10px;
        }
        .game-board {
            background: #bbada0;
            border-radius: 6px;
            padding: 10px;
            position: relative;
            margin: 0 auto;
        }
        .grid-container {
            display: grid;
            grid-template-columns: repeat(4, 100px);
            grid-template-rows: repeat(4, 100px);
            gap: 10px;
        }
        .grid-cell {
            background: #cdc1b4;
            border-radius: 3px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 35px;
            font-weight: bold;
            color: #776e65;
        }
        .grid-cell-2 { background: #eee4da; color: #776e65; }
        .grid-cell-4 { background: #ede0c8; color: #776e65; }
        .grid-cell-8 { background: #f2b179; color: #f9f6f2; }
        .grid-cell-16 { background: #f59563; color: #f9f6f2; }
        .grid-cell-32 { background: #f67c5f; color: #f9f6f2; }
        .grid-cell-64 { background: #f65e3b; color: #f9f6f2; }
        .grid-cell-128 { background: #edcf72; color: #f9f6f2; font-size: 30px; }
        .grid-cell-256 { background: #edcc61; color: #f9f6f2; font-size: 30px; }
        .grid-cell-512 { background: #edc850; color: #f9f6f2; font-size: 30px; }
        .grid-cell-1024 { background: #edc53f; color: #f9f6f2; font-size: 25px; }
        .grid-cell-2048 { background: #edc22e; color: #f9f6f2; font-size: 25px; }
        
        .btn {
            background: #8f7a66;
            color: #f9f6f2;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            font-weight: bold;
            cursor: pointer;
            margin: 5px;
        }
        .btn:hover {
            background: #9f8a76;
        }
        .game-message {
            margin: 20px 0;
            font-size: 18px;
            font-weight: bold;
        }
        .game-won { color: #ff9900; }
        .game-over { color: #ff0000; }
        .instructions {
            margin: 20px 0;
            color: #776e65;
        }
    </style>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Game 2048</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
    
    <script>
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowUp') {
                e.preventDefault();
                window.location.href = '@Url.Action("Move", "Game", new { direction = "up" })';
            } else if (e.key === 'ArrowDown') {
                e.preventDefault();
                window.location.href = '@Url.Action("Move", "Game", new { direction = "down" })';
            } else if (e.key === 'ArrowLeft') {
                e.preventDefault();
                window.location.href = '@Url.Action("Move", "Game", new { direction = "left" })';
            } else if (e.key === 'ArrowRight') {
                e.preventDefault();
                window.location.href = '@Url.Action("Move", "Game", new { direction = "right" })';
            }
        });
    </script>
</body>
</html>
