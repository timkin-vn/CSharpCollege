<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="430" Width="360"
        Background="Black"
        Foreground="White">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Text="{Binding DisplayValue}" Background="#333333" Foreground="White"
                   TextAlignment="Right" FontSize="42" VerticalAlignment="Center" Padding="5" Margin="5" />

        <Button Grid.Row="1" Grid.Column="0" Content="%" FontSize="36" Margin="5" Click="PercentButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="1" Grid.Column="1" Content="x²" FontSize="36" Margin="5" Click="SquareButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="1" Grid.Column="2" Content="√" FontSize="36" Margin="5" Click="SqrtButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="1" Grid.Column="3" Content="÷" FontSize="36" Margin="5" Click="OperationButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="2" Grid.Column="0" Content="7" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="2" Grid.Column="1" Content="8" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="2" Grid.Column="2" Content="9" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="2" Grid.Column="3" Content="×" FontSize="36" Margin="5" Click="OperationButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="3" Grid.Column="0" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="3" Grid.Column="1" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="3" Grid.Column="2" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="3" Grid.Column="3" Content="–" FontSize="36" Margin="5" Click="OperationButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="4" Grid.Column="0" Content="1" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="4" Grid.Column="1" Content="2" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="4" Grid.Column="2" Content="3" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="4" Grid.Column="3" Content="+" FontSize="36" Margin="5" Click="OperationButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="5" Grid.Column="0" Content="C" FontSize="36" Margin="5" Click="ClearButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="5" Grid.Column="1" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="5" Grid.Column="2" Content="⌫" FontSize="36" Margin="5" Click="BackspaceButton_Click" Background="#333333" Foreground="White" />

        <Button Grid.Row="5" Grid.Column="3" Content="=" FontSize="36" Margin="5" Click="OperationButton_Click" Background="#333333" Foreground="White" />
    </Grid>
</Window>
