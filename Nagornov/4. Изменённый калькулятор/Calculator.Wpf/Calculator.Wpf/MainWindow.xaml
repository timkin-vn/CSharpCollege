<Window x:Class="Calculator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.Wpf" 
        xmlns:viewmodels="clr-namespace:Calculator.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="800"
        Background="Black">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFFF0000" Offset="0.0"/>
                        <GradientStop Color="#FFFFFF00" Offset="0.5"/>
                        <GradientStop Color="#FF00FF00" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" Duration="0:0:3">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground.(GradientBrush.GradientStops)[0].(GradientStop.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#FFFF0000"/>
                                <LinearColorKeyFrame KeyTime="0:0:1" Value="#FF0000FF"/>
                                <LinearColorKeyFrame KeyTime="0:0:2" Value="#FF00FF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:3" Value="#FFFF0000"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground.(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#FFFFFF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:1" Value="#FFFF00FF"/>
                                <LinearColorKeyFrame KeyTime="0:0:2" Value="#FF00FFFF"/>
                                <LinearColorKeyFrame KeyTime="0:0:3" Value="#FFFFFF00"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground.(GradientBrush.GradientStops)[2].(GradientStop.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#FF00FF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:1" Value="#FFFF0000"/>
                                <LinearColorKeyFrame KeyTime="0:0:2" Value="#FFFFFF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:3" Value="#FF00FF00"/>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Дисплей с RGB-анимацией -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" 
                   Text="{Binding DisplayValue}" 
                   TextAlignment="Right" FontSize="42" 
                   VerticalAlignment="Center" Background="Black" 
                   Padding="5" Margin="5">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFFF0000" Offset="0.0"/>
                    <GradientStop Color="#FFFFFF00" Offset="0.5"/>
                    <GradientStop Color="#FF00FF00" Offset="1.0"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" Duration="0:0:3">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground.(GradientBrush.GradientStops)[0].(GradientStop.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#FFFF0000"/>
                                <LinearColorKeyFrame KeyTime="0:0:1" Value="#FF0000FF"/>
                                <LinearColorKeyFrame KeyTime="0:0:2" Value="#FF00FF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:3" Value="#FFFF0000"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground.(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#FFFFFF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:1" Value="#FFFF00FF"/>
                                <LinearColorKeyFrame KeyTime="0:0:2" Value="#FF00FFFF"/>
                                <LinearColorKeyFrame KeyTime="0:0:3" Value="#FFFFFF00"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground.(GradientBrush.GradientStops)[2].(GradientStop.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0" Value="#FF00FF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:1" Value="#FFFF0000"/>
                                <LinearColorKeyFrame KeyTime="0:0:2" Value="#FFFFFF00"/>
                                <LinearColorKeyFrame KeyTime="0:0:3" Value="#FF00FF00"/>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

        <!-- Кнопки с цифрами -->
        <Button Grid.Row="1" Grid.Column="0" Content="7" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="8" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="1" Grid.Column="2" Content="9" FontSize="36" Margin="5" Click="DigitButton_Click"/>

        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Content="5" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="6" FontSize="36" Margin="5" Click="DigitButton_Click"/>

        <Button Grid.Row="3" Grid.Column="0" Content="1" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="2" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="3" FontSize="36" Margin="5" Click="DigitButton_Click"/>

        <Button Grid.Row="4" Grid.Column="0" Content="0" FontSize="36" Margin="5" Click="DigitButton_Click"/>
        <Button Grid.Row="4" Grid.Column="1" Content="π" FontSize="36" Margin="5" Click="PressPi_Click"/>

        <!-- Кнопки операций -->
        <Button Grid.Row="4" Grid.Column="2" Content="C" FontSize="36" Margin="2,5,2,5" Click="ClearButton_Click"/>
        <Button Grid.Row="2" Grid.Column="4" Content="+" FontSize="36" Margin="5" Click="OperationButton_Click" RenderTransformOrigin="0.56,0.147"/>
        <Button Grid.Row="2" Grid.Column="5" Content="-" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="4" Content="*" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="3" Grid.Column="5" Content="/" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="4" Grid.Column="4" Content="," FontSize="36" Margin="5" Click="DecimalPoint_Click"/>
        <Button Grid.Row="4" Grid.Column="5" Content="=" FontSize="36" Margin="5" Click="OperationButton_Click"/>
        <Button Grid.Row="1" Grid.Column="5" Content="√" FontSize="36" Margin="5,5,5,5" Click="SquareRoot_Click" RenderTransformOrigin="1.585,-4.07"/>
        <Button Grid.Row="1" Grid.Column="4" Content="%" FontSize="36" Margin="5,5,5,5" Click="OperationButton_Click" RenderTransformOrigin="-0.633,-4.111"/>
    </Grid>
</Window>