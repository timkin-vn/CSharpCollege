<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FifteenGame.Wpf" 
        xmlns:viewmodels="clr-namespace:FifteenGame.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Сапер" Height="650" Width="600">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Анимация мигания при проигрыше -->
        <Storyboard x:Key="GameOverAnimation" RepeatBehavior="3x">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="0:0:0.1" Value="Red"/>
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="White"/>
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="Red"/>
                <EasingColorKeyFrame KeyTime="0:0:0.4" Value="White"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        
        <Style x:Key="AnimatedMineButtonStyle" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsExploded}" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRevealed}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="САПЕР" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10" x:Name="TitleText">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                            <Setter Property="Text" Value="💥 ПРОИГРЫШ! 💥"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        
        <Border Grid.Row="1" Background="LightGray" Margin="10" Padding="10" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Количество мин: " FontSize="14" VerticalAlignment="Center"/>

                <Slider x:Name="MinesSlider" Minimum="5" Maximum="30" Value="{Binding MinesCount}" 
                        Width="150" Margin="5,0" VerticalAlignment="Center"
                        TickFrequency="1" IsSnapToTickEnabled="True"/>

                <TextBox Text="{Binding MinesCount, UpdateSourceTrigger=PropertyChanged}" 
                        Width="40" Margin="5,0" VerticalAlignment="Center" TextAlignment="Center"
                        PreviewTextInput="MinesTextBox_PreviewTextInput"/>

                <Button Content="Применить" Command="{Binding ApplySettingsCommand}" 
                       Padding="10,5" Margin="10,0"/>
            </StackPanel>
        </Border>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Всего мин: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalMines}" FontSize="16" FontWeight="Bold" 
                      VerticalAlignment="Center" Margin="5,0,20,0"/>

            <TextBlock Text="Флаги: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding FlagsCount}" FontSize="16" FontWeight="Bold" 
                      VerticalAlignment="Center" Margin="5,0,20,0"/>

            <Button Content="Новая игра" Command="{Binding NewGameCommand}" 
                   Padding="10,5" Margin="10,0"/>
        </StackPanel>

        
        <ItemsControl Grid.Row="3" ItemsSource="{Binding Cells}" Margin="10" x:Name="GameField">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding RowCount}" Columns="{Binding ColumnCount}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding DisplayText}" 
                           Command="{Binding DataContext.CellClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                           CommandParameter="{Binding}"
                           Margin="1"
                           Background="{Binding CellColor}"
                           Foreground="{Binding TextColor}"
                           FontWeight="Bold"
                           FontSize="16"
                           BorderThickness="1"
                           BorderBrush="DarkGray"
                           Style="{StaticResource AnimatedMineButtonStyle}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        
        <TextBlock Grid.Row="4" Text="{Binding GameStatus}" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10" Foreground="{Binding StatusColor}" x:Name="StatusText">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</Window>