<Window x:Class="CardFile.Wpf.Views.CardEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="362" Width="450" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>

    <Grid Margin="0,0,0,139" HorizontalAlignment="Left" Width="450">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Разновидность авто" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Type}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Производитель авто:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Manufacturer}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена за единицу авто:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Осталось в автосалоне" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding StockQuantity}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Price}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5,0,0,0" />
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Продано за месяц" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" RenderTransformOrigin="0.628,4.091" Width="111" />
        <TextBox Grid.Row="9" Text="{Binding lavka}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="5,10,0,0" Grid.Column="1" />

        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding strana}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="5,41,0,0" />

        <TextBlock Grid.Row="9" Grid.Column="0" Text="Cтрана производства:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,0,0" />

        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Content="OK" Padding="5" Margin="10,10,1,5" Click="OkButton_Click" Height="23" RenderTransformOrigin="0.455,2.455" />

            <Button Content="Отмена" Padding="5" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
