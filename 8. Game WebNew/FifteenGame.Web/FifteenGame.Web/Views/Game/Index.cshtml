﻿@model FifteenGame.Web.Models.GameViewModel
@using FifteenGame.Business.Models
@{
    Layout = null;
    ViewBag.Title = "Три в ряд";
    bool isGameOver = Model.GameState != GameState.Playing;
    string gameOverMessage = TempData["GameOverMessage"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <title>Три в ряд</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .game-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }

        .status {
            font-size: 18px;
            font-weight: bold;
        }

        .game-board {
            border: 3px solid #333;
            border-radius: 10px;
            padding: 10px;
            background-color: #fff;
            display: inline-block;
        }

        .game-row {
            display: flex;
        }

        .game-cell {
            width: 60px;
            height: 60px;
            padding: 2px;
        }

        .gem {
            display: block;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .gem:hover {
                transform: scale(1.1);
                border-color: #333;
            }

            .gem.selected {
                border: 3px solid gold;
                box-shadow: 0 0 10px gold;
                transform: scale(1.1);
            }

            .gem.matched {
                opacity: 0.5;
                animation: fadeOut 0.5s ease-in-out;
            }

        .empty-cell {
            width: 100%;
            height: 100%;
            background-color: #f0f0f0;
            border-radius: 5px;
        }

        .game-over-message {
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            margin: 20px 0;
            padding: 15px;
            border-radius: 5px;
        }

        @@keyframes fadeOut {
            from {
                opacity: 1;
                transform: scale(1);
            }

            to {
                opacity: 0;
                transform: scale(0.5);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Три в ряд</h2>

        @if (!string.IsNullOrEmpty(gameOverMessage))
        {
            <div class="alert alert-info game-over-message">
                @gameOverMessage
            </div>
        }

        <div class="game-info">
            <div class="status">@Model.GameStatus</div>
            <div class="actions">
                <a href="@Url.Action("NewGame", "Game")" class="btn btn-primary">Новая игра</a>
            </div>
        </div>

        <div class="game-board">
            @for (int row = 0; row < Model.RowCount; row++)
            {
                <div class="game-row">
                    @for (int column = 0; column < Model.ColumnCount; column++)
                    {
                        var cell = Model.Cells[row, column];
                        <div class="game-cell">
                            @if (!cell.IsEmpty)
                            {
                                <a href="@Url.Action("SelectGem", "Game", new { row = cell.Row, column = cell.Column })"
                                   class="@cell.CssClass"
                                   style="background-color: @cell.GemColor"
                                   title="Row: @cell.Row, Column: @cell.Column">
                                </a>
                            }
                            else
                            {
                                <div class="empty-cell"></div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>