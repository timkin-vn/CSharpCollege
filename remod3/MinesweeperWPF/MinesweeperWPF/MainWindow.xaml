<Window x:Class="MinesweeperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MinesweeperWPF.ViewModels"
        Title="Сапёр (WPF)"
        Width="900" Height="650"
        MinWidth="420" MinHeight="360"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        FontSize="10">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <!-- Верхняя панель как в WinForms: белая, 48px -->
        <Style x:Key="TopBarText" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Width" Value="160"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="PrimaryButton">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Клетка -->
        <Style x:Key="CellButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#B8B8B8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="BorderBrush" Value="#A0A0A0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="BorderBrush" Value="#DCDCDC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <DockPanel Background="#F5F6F8">

        <!-- TOP BAR -->
        <Border DockPanel.Dock="Top" Background="White" Height="48" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Style="{StaticResource TopBarText}" Text="Сложность:"/>

                <ComboBox Grid.Column="1"
                          SelectedIndex="{Binding SelectedDifficultyIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="Новичок (9×9, 10 мин)"/>
                    <ComboBoxItem Content="Любитель (16×16, 40 мин)"/>
                    <ComboBoxItem Content="Профессионал (30×16, 99 мин)"/>
                    <ComboBoxItem Content="Пользовательский…"/>
                </ComboBox>

                <Button Grid.Column="3"
                        Style="{StaticResource PrimaryButton}"
                        Content="Новая игра"
                        Command="{Binding NewGameCommand}"/>

                <TextBlock Grid.Column="4"
                           Style="{StaticResource TopBarText}"
                           Margin="12,0,12,0"
                           Text="|"/>

                <TextBlock Grid.Column="6"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{Binding FlagsLeft, StringFormat=Мины: {0}}"/>

                <TextBlock Grid.Column="8"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="{Binding Seconds, StringFormat=Время: {0}}"/>
            </Grid>
        </Border>

        <!-- FIELD AREA -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Background="#F5F6F8">

            <!-- как в WinForms: отступы 12 и серый контейнер -->
            <Border Margin="12"
                    Padding="1"
                    Background="#DCDCDC"
                    BorderBrush="#BEBEBE"
                    BorderThickness="1">

                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource CellButtonStyle}"
                                    Width="{Binding DataContext.CellSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Height="{Binding DataContext.CellSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Margin="0"
                                    Content="{Binding Text}"
                                    Background="{Binding Background}"
                                    Foreground="{Binding Foreground}"
                                    IsEnabled="{Binding IsEnabled}"
                                    Command="{Binding DataContext.CellLeftClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    PreviewMouseRightButtonDown="Cell_RightClick"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Border>
        </ScrollViewer>

    </DockPanel>
</Window>
