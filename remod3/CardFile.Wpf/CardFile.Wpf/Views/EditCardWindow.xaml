<Window x:Class="CardFile.Wpf.Views.EditCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="312" Width="420" MinHeight="312" MinWidth="420" MaxHeight="350" MaxWidth="420" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Оригинальное название:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OriginalTitle}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Жанры:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Genre}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата релиза:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding ReleaseDate}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Студия:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Studio}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Режиссёр:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Director}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Дата завершения:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
            <DatePicker SelectedDate="{Binding EndDate}" IsEnabled="{Binding IsDismissalDateEnabled}" Margin="5" VerticalAlignment="Center" />
            <CheckBox VerticalAlignment="Center" Margin="5" IsChecked="{Binding WorksTillNow}" Checked="WokrsTillNow_Checked" Unchecked="WorksTillNow_Unchecked">
                <TextBlock Text="До сих пор выходит" />
            </CheckBox>
        </StackPanel>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Рейтинг:" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" />

        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Rating}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" />

        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="OK" Margin="5" Padding="5" Click="OkButton_Click" />
            <Button Content="Отмена" Margin="5" Padding="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>