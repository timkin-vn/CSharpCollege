<Window x:Class="CalculatorForm.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="750" Width="740" Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поле для выражения -->
        <TextBlock x:Name="ExpressionTextBlock" Grid.Row="0" Margin="5" Height="45" FontSize="16"
                   Background="#282828" Foreground="#DCDCDC" TextAlignment="Right" VerticalAlignment="Center" Padding="5"/>

        <!-- Поле для результата -->
        <TextBlock x:Name="DisplayTextBlock" Grid.Row="1" Margin="5" Height="80" FontSize="32" FontWeight="Bold"
                   Background="#282828" Foreground="White" TextAlignment="Right" VerticalAlignment="Center" Padding="5" Text="0"/>

        <!-- Сетка для кнопок -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопки -->
            <Button Content="7" Grid.Row="1" Grid.Column="0" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="C" Grid.Row="1" Grid.Column="3" Margin="3" FontSize="20" FontWeight="Bold" Background="#C83232" Foreground="White" Click="ClearButton_Click"/>
            <Button Content="+" Grid.Row="1" Grid.Column="4" Margin="3" FontSize="20" FontWeight="Bold" Background="#464646" Foreground="White" Click="OperationButton_Click"/>
            <Button Content="√" Grid.Row="1" Grid.Column="5" Margin="3" FontSize="20" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>

            <Button Content="4" Grid.Row="2" Grid.Column="0" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="x²" Grid.Row="2" Grid.Column="3" Margin="3" FontSize="20" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="4" Margin="3" FontSize="20" FontWeight="Bold" Background="#464646" Foreground="White" Click="OperationButton_Click"/>
            <Button Content="%" Grid.Row="2" Grid.Column="5" Margin="3" FontSize="20" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>

            <Button Content="1" Grid.Row="3" Grid.Column="0" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button x:Name="SineButton" Content="sin" Grid.Row="3" Grid.Column="3" Margin="3" FontSize="16" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>
            <Button Content="/" Grid.Row="3" Grid.Column="4" Margin="3" FontSize="20" FontWeight="Bold" Background="#464646" Foreground="White" Click="OperationButton_Click"/>
            <Button x:Name="TrigMenuButton" Content="▼" Grid.Row="3" Grid.Column="5" Margin="3" FontSize="16" FontWeight="Bold" Background="#646464" Foreground="White" Click="TrigMenuButton_Click"/>

            <Button Content="0" Grid.Row="4" Grid.Column="0" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="DigitButton_Click"/>
            <Button Content="." Grid.Row="4" Grid.Column="1" Margin="3" FontSize="20" FontWeight="Bold" Background="#323232" Foreground="White" Click="FunctionButton_Click"/>
            <Button Content="+/-" Grid.Row="4" Grid.Column="2" Margin="3" FontSize="20" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" Margin="3" FontSize="20" FontWeight="Bold" Background="#0078D7" Foreground="White" Click="EqualButton_Click"/>
            <Button Content="*" Grid.Row="4" Grid.Column="4" Margin="3" FontSize="20" FontWeight="Bold" Background="#464646" Foreground="White" Click="OperationButton_Click"/>
            <Button Content="MR" Grid.Row="4" Grid.Column="5" Margin="3" FontSize="20" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>
            <Button Content="MS" Grid.Row="4" Grid.Column="5" Margin="3" FontSize="20" FontWeight="Bold" Background="#009688" Foreground="White" Click="FunctionButton_Click"/>
        </Grid>
    </Grid>
</Window>