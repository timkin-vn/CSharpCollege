<Window x:Class="Pacmen.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pac-Man" Height="350" Width="350" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="Black"/>
        <TextBlock x:Name="ScoreText" Foreground="White" FontSize="16" Margin="10"/>
        <TextBlock x:Name="GameOverText" Foreground="Red" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
    </Grid>
</Window>