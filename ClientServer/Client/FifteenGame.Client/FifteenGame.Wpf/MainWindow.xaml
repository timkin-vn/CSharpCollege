<Window x:Class="FifteenGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FifteenGame.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Морской бой" Height="800" Width="1350"
        WindowStartupLocation="CenterScreen"
        Background="#0A1A2F">

    <!-- Подключаем ViewModel -->
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Игровые поля -->
        </Grid.RowDefinitions>

        <!-- === ВЕРХНЯЯ ПАНЕЛЬ === -->
        <Border Grid.Row="0" Background="#001122" CornerRadius="0,0,20,20" BorderBrush="#003344" BorderThickness="0,0,0,2">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
            </Border.Effect>

            <Grid>
                <!-- Центр: Таймер и Имя -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding ElapsedTime}"
                               FontSize="64" FontWeight="ExtraBold" Foreground="#00FF41"
                               HorizontalAlignment="Center" Margin="0,-5,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00FF41" BlurRadius="15" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="{Binding PlayerName}"
                               FontSize="28" FontWeight="Bold" Foreground="#00E5FF"
                               HorizontalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00E5FF" BlurRadius="8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <!-- Справа: Рекорд -->
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,40,0">
                    <TextBlock Text="BEST TIME" Foreground="#FFD700" FontSize="14" FontWeight="Bold" 
                               HorizontalAlignment="Center" Opacity="0.7"/>

                    <Border BorderBrush="#FFD700" BorderThickness="2" CornerRadius="10" Padding="15,5" Margin="0,5,0,0" Background="#22FFD700">
                        <TextBlock Text="{Binding BestTime}" FontSize="32" FontWeight="ExtraBold" Foreground="#FFD700">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#FFD700" BlurRadius="10"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>


        <!-- === ИГРОВАЯ ЗОНА === -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Игрок -->
                <ColumnDefinition Width="100"/>
                <!-- Разделитель -->
                <ColumnDefinition Width="*"/>
                <!-- Враг -->
            </Grid.ColumnDefinitions>

            <!-- ЛЕВОЕ ПОЛЕ (ИГРОК) -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="YOUR FLEET" Foreground="#00FFFF" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FFFF" BlurRadius="10"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Сетка с координатами -->
                <Grid Width="480" Height="480" Background="#001833">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Координаты Буквы (A-J) -->
                    <UniformGrid Grid.Column="1" Columns="10">
                        <TextBlock Text="A" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="B" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="C" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="D" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="E" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="F" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="G" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="H" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="I" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="J" Foreground="#00AAAA" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Координаты Цифры (1-10) -->
                    <UniformGrid Grid.Row="1" Rows="10">
                        <TextBlock Text="1"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="2"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="3"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="4"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="5"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="6"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="7"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="8"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="9"  Foreground="#00AAAA" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="10" Foreground="#00AAAA" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Клетки Игрока -->
                    <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding PlayerCells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="10" Columns="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Просто отображение, кликать нельзя -->
                                <Border Background="{Binding Background}" BorderBrush="#003366" BorderThickness="1">
                                    <TextBlock Text="{Binding Symbol}" Foreground="{Binding TextColor}"
                                               FontSize="28" FontWeight="ExtraBold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>

            <!-- ПРАВОЕ ПОЛЕ (ВРАГ) -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ENEMY SECTOR" Foreground="#FF4444" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF4444" BlurRadius="10"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Grid Width="480" Height="480" Background="#001833">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Координаты Врага -->
                    <UniformGrid Grid.Column="1" Columns="10">
                        <TextBlock Text="A" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="B" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="C" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="D" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="E" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="F" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="G" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="H" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="I" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="J" Foreground="#AA4444" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <UniformGrid Grid.Row="1" Rows="10">
                        <TextBlock Text="1"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="2"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="3"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="4"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="5"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="6"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="7"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="8"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="9"  Foreground="#AA4444" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="10" Foreground="#AA4444" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <!-- Клетки Врага (Кликабельные) -->
                    <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding ComputerCells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="10" Columns="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- КЛИК ЗДЕСЬ -->
                                <Border Background="{Binding Background}" BorderBrush="#440000" BorderThickness="1"
                                        Cursor="Hand" MouseLeftButtonDown="EnemyCell_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding Symbol}" Foreground="{Binding TextColor}"
                                               FontSize="28" FontWeight="ExtraBold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>