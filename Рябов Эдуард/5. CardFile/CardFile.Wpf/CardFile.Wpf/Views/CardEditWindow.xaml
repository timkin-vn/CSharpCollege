<Window x:Class="CardFile.Wpf.Views.CardEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardFile.Wpf.Views" xmlns:viewmodels="clr-namespace:CardFile.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Правка карточки" Height="362" Width="450" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodels:CardViewModel />
    </Window.DataContext>

    <Grid Margin="0,0,0,10" HorizontalAlignment="Center" Width="405">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Нзвание:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Type}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Производитель:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Manufacturer}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Количество на складе" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Price}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5,0,0,0" />

        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding StockQuantity}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Имя покупателя" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding NameBay}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Номер телфона" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />

        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding PhoneNumber}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Куплено покупателем" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" />
        
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding QuantitySell}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200" Margin="5" />


        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Height="161" Margin="159,0,0,0" Width="160" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Button Content="OK" Padding="5" Margin="5" Click="OkButton_Click" RenderTransformOrigin="0.5,0.5" Height="50" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.21"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button Content="Отмена" Padding="5" Click="CancelButton_Click" Height="49" RenderTransformOrigin="0.5,0.5" Width="60" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </StackPanel>
    </Grid>
</Window>
